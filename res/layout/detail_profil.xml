<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:id="@+id/scrollView">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFBC9"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFBC9"
                    android:orientation="vertical"
                    android:layout_marginBottom="50dp">

                <!-- Start Linear Layout Header -->
                <LinearLayout
                        android:id="@+id/HeaderLinearLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF1B5"
                        android:orientation="horizontal">

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".2"/>
                    <!-- End Blank Space -->

                    <!-- Start Header Logo Image -->
                    <ImageView
                            android:id="@+id/logo_index"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/icon_logopanjang"
                            android:contentDescription="@string/app_name"/>
                    <!-- End Header Logo Image -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".2"/>
                    <!-- End Blank Space -->

                </LinearLayout>
                <!-- End Linear Layout Header -->

                <!-- Start Linear Layout Content -->
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        >

                    <TextView
                            android:id="@+id/detail_profil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#D046F2"
                            android:text="@string/detail_profil"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="20dp"/>

                    <!-- Start Linear Layout Row -->
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">

                        <!-- Start Blank Space -->
                        <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight=".1"/>
                        <!-- End Blank Space -->

                        <!-- Start Linear Layout Profil -->
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                            <!-- Start Linear Layout Profil Nama -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Profil Nama -->
                                <TextView
                                        android:id="@+id/text_profil_nama"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_nama"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Profil Nama -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua -->

                            </LinearLayout>
                            <!-- End Linear Layout Profil Nama -->

                            <!-- Start Text View Profil Nama -->
                            <TextView
                                    android:id="@+id/profil_nama"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FF0000"
                                    android:hint="@string/profil_hint_nama"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:layout_margin="10dp"/>
                            <!-- End Text View Profil Nama -->

                            <!-- Start Linear Layout Golongan Darah -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Golongan Darah -->
                                <TextView
                                        android:id="@+id/text_profil_golongandarah"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_golongandarah"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Golongan Darah -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua -->

                                <!-- Start Text View Golongan Darah -->
                                <TextView
                                        android:id="@+id/profil_golongandarah"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FF0000"
                                        android:text="@string/profil_A"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Titik Dua -->

                            </LinearLayout>
                            <!-- End Linear Layout Golongan Darah -->

                            <!-- Start Linear Layout Panjang Lahir -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="10dp" android:layout_marginTop="10dp">

                                <!-- Start Text View Panjang Lahir -->
                                <TextView
                                        android:id="@+id/text_profil_panjanglahir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_panjanglahir"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        />
                                <!-- End Text View Panjang Lahir -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua -->

                                <!-- Start Text View Panjang Lahir -->
                                <TextView
                                        android:id="@+id/profil_panjanglahir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FF0000"
                                        android:text="@string/dash"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginRight="5dp"/>
                                <!-- End Text View Panjang Lahir -->

                                <!-- Start Text View Centimeter -->
                                <TextView
                                        android:id="@+id/profil_centimeter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_centimeter"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End text View Centimeter-->

                            </LinearLayout>
                            <!-- End Linear Layout Panjang Lahir -->

                            <!-- Start Linear Layout Berat Lahir -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="10dp">

                                <!-- Start Text View Berat Lahir -->
                                <TextView
                                        android:id="@+id/text_profil_beratlahir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_beratlahir"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        />
                                <!-- End Text View Berat Lahir -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"/>
                                <!-- Start Text View Titik Dua -->

                                <!-- Start Text View Berat Lahir -->
                                <TextView
                                        android:id="@+id/profil_beratlahir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:textColor="#FF0000"
                                        android:text="@string/dash"
                                        android:layout_marginRight="5dp"/>
                                <!-- End Text View Berat Lahir -->

                                <!-- Start Text View Gram -->
                                <TextView
                                        android:id="@+id/profil_gram"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_gram"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Gram -->

                            </LinearLayout>
                            <!-- End Linear Layout Berat Lahir -->

                            <!-- Start Linear Layout Alergi -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Alergi -->
                                <TextView
                                        android:id="@+id/text_profil_alergi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_alergi"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Alergi -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua-->

                            </LinearLayout>
                            <!-- End Linear Layout Alergi -->

                            <!-- Start Text View Alergi -->
                            <TextView
                                    android:id="@+id/profil_alergi"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FF0000"
                                    android:text="@string/dash"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:layout_margin="10dp"/>
                            <!-- End Linear Layout Alergi-->

                            <!-- Start Linear Layout Penyakit Kronis -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Penyakit Kronis -->
                                <TextView
                                        android:id="@+id/text_profil_penyakitkronis"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_penyakitkronis"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Penyakit Kronis -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua -->

                            </LinearLayout>
                            <!-- End Linear Layout Penyakit Kronis -->

                            <!-- Start Text VIew Penyakit Kronis -->
                            <TextView
                                    android:id="@+id/profil_penyakitkronis"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FF0000"
                                    android:text="@string/dash"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:layout_margin="10dp"/>
                            <!-- End Text VIew Penyakit Kronis -->

                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <!-- Start Blank Space -->
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight=".3"/>
                                <!-- End Blank Space -->

                                <!-- Start Image View Button Ubah -->
                                <ImageView
                                        android:id="@+id/button_passcode"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/tombol_passcode"
                                        android:contentDescription="@string/app_name"/>
                                <!-- End Image View Button Ubah -->

                                <!-- Start Blank Space -->
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight=".3"/>
                                <!-- End Blank Space -->

                            </LinearLayout>
                        </LinearLayout>
                        <!-- End Linear Layout Profil -->

                        <!-- Start Blank Space -->
                        <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight=".1"/>
                        <!-- End Blank Space -->

                        <!-- Start Linear Layout Profil -->
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight=".8">

                            <!-- Start Linear Layout Jenis Kelamin -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Jenis Kelamin -->
                                <TextView
                                        android:id="@+id/text_profil_jeniskelamin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_jeniskelamin"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Jenis Kelamin -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"/>
                                <!-- End Text View Titik Dua -->

                            </LinearLayout>
                            <!-- End Text View Jenis Kelamin -->

                            <!-- Start Text View Jenis Kelamin -->
                            <TextView
                                    android:id="@+id/profil_jeniskelamin"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FF0000"
                                    android:text="@string/dash"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:layout_margin="10dp"/>
                            <!-- End Text View Jenis Kelamin -->

                            <!-- Start Linear Layout Tempat Lahir -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Tempat Lahir -->
                                <TextView
                                        android:id="@+id/text_profil_tempatlahir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_tempatlahir"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Tempat Lahir -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua -->

                            </LinearLayout>
                            <!-- End Linear Layout Tempat Lahir -->

                            <!-- Start Text View Tempat Lahir -->
                            <TextView
                                    android:id="@+id/profil_tempatlahir"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FF0000"
                                    android:hint="@string/profil_hint_tempatlahir"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:layout_margin="10dp"/>
                            <!-- End Text View Tempat Lahir -->

                            <!-- Start Linear Layout Tanggal Lahir -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Tanggal Lahir -->
                                <TextView
                                        android:id="@+id/text_profil_tanggallahir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_tanggallahir"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Tanggal Lahir -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua -->

                            </LinearLayout>
                            <!-- End Linear Layout Tanggal Lahir -->

                            <!-- Start Text View Tanggal Lahir -->
                            <TextView
                                    android:id="@+id/profil_tanggallahir"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FF0000"
                                    android:hint="@string/profil_hint_tanggallahir"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:layout_margin="10dp"/>
                            <!-- End Text Tanggal lahir -->

                            <!-- Start Linear Layout Foto -->
                            <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                <!-- Start Text View Foto -->
                                <TextView
                                        android:id="@+id/text_profil_foto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/profil_foto"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                                <!-- End Text View Foto -->

                                <!-- Start Text View Titik Dua -->
                                <TextView
                                        android:id="@+id/titikdua"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#D046F2"
                                        android:text="@string/titikdua"
                                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                                        android:layout_marginLeft="5dp"/>
                                <!-- End Text View Titik Dua -->

                            </LinearLayout>
                            <!-- End Linear Layout Foto -->

                            <!-- Start Image View Foto -->
                            <ImageView
                                    android:id="@+id/profil_foto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/icon_logo"
                                    android:contentDescription="@string/app_name"/>
                            <!-- End Image View Foto -->

                        </LinearLayout>
                        <!-- End Linear Layout Profil -->

                        <!-- Start Blank Space -->
                        <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight=".1"/>
                        <!-- End Blank Space -->

                    </LinearLayout>
                    <!-- End Linear Layout Row -->

                </LinearLayout>
                <!-- End Linear Layout Content -->

                <!-- Start Linear Layout Content -->
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp" android:layout_marginTop="20dp">

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".5"/>
                    <!-- End Blank Space -->

                    <!-- Start Image View Button Ubah -->
                    <ImageView
                            android:id="@+id/button_ubah"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/tombol_ubah"
                            android:contentDescription="@string/app_name"/>
                    <!-- End Image View Button Ubah -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".5"/>
                    <!-- End Blank Space -->

                    <!-- Start Image View Button Hapus -->
                    <ImageView
                            android:id="@+id/button_hapus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/tombol_hapus"
                            android:contentDescription="@string/app_name"/>
                    <!-- End Image View Button Hapus -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".5"/>
                    <!-- End Blank Space -->

                </LinearLayout>
                <!-- End Linear Layout Content -->

            </LinearLayout>

        </LinearLayout>

        <!-- Start Relative Layout Footer -->
        <RelativeLayout
                android:id="@+id/FooterRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF1B5"
                android:layout_alignParentBottom="true">

            <!-- Start Text Footer -->
            <TextView
                    android:id="@+id/text_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#D046F2"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/text_footer"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"/>
            <!-- End Text Footer -->

        </RelativeLayout>
        <!-- End Relative Layout Footer -->

    </RelativeLayout>

</ScrollView>