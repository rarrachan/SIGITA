<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:id="@+id/scrollView">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFBC9"
                android:orientation="vertical">

            <!-- Start Linear Layout Header -->
            <LinearLayout
                    android:id="@+id/HeaderLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF1B5"
                    android:orientation="horizontal">

                <!-- Start Blank Space -->
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight=".2"/>
                <!-- End Blank Space -->

                <!-- Start Header Logo Image -->
                <ImageView
                        android:id="@+id/logo_index"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_logopanjang"
                        android:contentDescription="@string/app_name"/>
                <!-- End Header Logo Image -->

                <!-- Start Blank Space -->
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight=".2"/>
                <!-- End Blank Space -->

            </LinearLayout>
            <!-- End Linear Layout Header -->

            <!-- Start Linear Layout Profil -->
            <LinearLayout
                    android:id="@+id/ProfilLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/button_rounded">

                <!-- Start Button Profil -->
                <Button
                        android:id="@+id/button_profil"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_profil"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"/>
                <!-- End Button Profil -->

                <!-- Start Text Profil -->
                <TextView
                        android:id="@+id/text_button_profil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#D046F2"
                        android:text="@string/button_profil"
                        android:layout_marginLeft="5dp"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_gravity="center_vertical"/>
                <!-- End Text Profil -->

            </LinearLayout>
            <!-- End Linear Layout Profil -->

            <!-- Start Linear Layout Content -->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="50dp">

                <!-- Start Blank Space -->
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".2" android:layout_marginTop="10dp"/>
                <!-- End Blank Space -->

                <!-- Start Linear Layout Row -->
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_gravity="center" android:layout_marginBottom="10dp">

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3"/>
                    <!-- End Blank Space -->

                    <!-- Start Linear Layout Gizi -->
                    <LinearLayout
                            android:id="@+id/GiziLinearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                        <!-- Start Image View Gizi -->
                        <ImageView
                                android:id="@+id/button_gizi"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".5"
                                android:adjustViewBounds="true"
                                android:src="@drawable/icon_gizi"
                                android:contentDescription="@string/app_name"/>
                        <!-- End Image View Gizi -->

                        <!-- Start Text View Gizi -->
                        <TextView
                                android:id="@+id/text_button_gizi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#D046F2"
                                android:text="@string/button_gizi"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                style="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:layout_gravity="center_horizontal"/>
                        <!-- End Text View Gizi -->

                    </LinearLayout>
                    <!-- End Linear Layout Gizi -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3"/>
                    <!-- End Blank Space -->

                    <!-- Start Linear Layout Tumbuh Kembang -->
                    <LinearLayout
                            android:id="@+id/TumbuhKembangLinearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                        <!-- Start Image View Tumbuh Kembang -->
                        <ImageView
                                android:id="@+id/button_tumbuhkembang"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".5"
                                android:adjustViewBounds="true"
                                android:src="@drawable/icon_tumbuhkembang"
                                android:contentDescription="@string/app_name"/>
                        <!-- End Image View Tumbuh Kembang -->

                        <!-- Start Text View Tumbuh Kembang -->
                        <TextView
                                android:id="@+id/text_button_tumbuhkembang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#D046F2"
                                android:text="@string/button_tumbuhkembang"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                style="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:layout_gravity="center_horizontal"/>
                        <!-- End Text View Tumbuh Kembang -->

                    </LinearLayout>
                    <!-- End Linear Layout Tumbuh Kembang -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3"/>
                    <!-- End Blank Space -->

                </LinearLayout>
                <!-- End Linear Layout Row -->

                <!-- Start Linear Layout Row -->
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_weight="1" android:layout_marginTop="10dp">

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3"/>
                    <!-- End Blank Space -->

                    <!-- Start Linear Layout Imunisasi -->
                    <LinearLayout
                            android:id="@+id/ImunisasiLinearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                        <!-- Start Image View Imunisasi -->
                        <ImageView
                                android:id="@+id/button_imunisasi"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".5"
                                android:adjustViewBounds="true"
                                android:src="@drawable/icon_imunisasi"
                                android:contentDescription="@string/app_name"/>
                        <!-- End Image View Imunisasi -->

                        <!-- Start Text View Imunisasi -->
                        <TextView
                                android:id="@+id/text_button_imunisasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#D046F2"
                                android:text="@string/button_imunisasi"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                style="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:layout_gravity="center_horizontal"/>
                        <!-- End Text View Imunisasi -->

                    </LinearLayout>
                    <!-- End Linear Layout Imunisasi -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3"/>
                    <!-- End Blank Space -->

                    <!-- Start Linear Layout Rekam Medis -->
                    <LinearLayout
                            android:id="@+id/RekamMedisLinearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                        <!-- Start Image View Rekam Medis -->
                        <ImageView
                                android:id="@+id/button_rekammedis"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".5"
                                android:adjustViewBounds="true"
                                android:src="@drawable/icon_rekammedis"
                                android:contentDescription="@string/app_name"/>
                        <!-- End Image View Rekam Medis -->

                        <!-- Start Text View Rekam Medis -->
                        <TextView
                                android:id="@+id/text_button_rekammedis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#D046F2"
                                android:text="@string/button_rekammedis"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                style="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:layout_gravity="center_horizontal"/>
                        <!-- End Text View Rekam Medis -->

                    </LinearLayout>
                    <!-- End Linear Layout Rekam Medis -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3"/>
                    <!-- End Blank Space -->

                </LinearLayout>
                <!-- End Linear Layout Row -->

                <!-- Start Blank Space -->
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight=".5" android:layout_marginBottom="30dp"/>
                <!-- End Blank Space -->

            </LinearLayout>
            <!-- End Linear Layout Content -->

        </LinearLayout>

        <!-- Start Relative Layout Footer -->
        <RelativeLayout
                android:id="@+id/FooterRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF1B5"
                android:layout_alignParentBottom="true">

            <!-- Start Text Footer -->
            <TextView
                    android:id="@+id/text_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#D046F2"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/text_footer"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"/>
            <!-- End Text Footer -->

        </RelativeLayout>
        <!-- End Relative Layout Footer -->

    </RelativeLayout>

</ScrollView>