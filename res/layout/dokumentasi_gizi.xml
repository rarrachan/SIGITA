<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:id="@+id/scrollView">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFBC9"
                android:orientation="vertical">

            <!-- Start Linear Layout Header -->
            <LinearLayout
                    android:id="@+id/HeaderLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF1B5">

                <!-- Start Blank Space -->
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight=".2"/>
                <!-- End Blank Space -->

                <!-- Start Header Logo Image -->
                <ImageView
                        android:id="@+id/logo_index"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_logopanjang"
                        android:contentDescription="@string/app_name"/>
                <!-- End Header Logo Image -->

                <!-- Start Blank Space -->
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight=".2"/>
                <!-- End Blank Space -->

            </LinearLayout>
            <!-- End Linear Layout Header -->

            <!-- Start Text View Dokumentasi Gizi -->
            <TextView
                    android:id="@+id/button_dokumentasigizi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D046F2"
                    android:text="@string/button_dokumentasigizi"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"/>
            <!-- End Text View Dokumentasi Gizi -->

            <!-- Start Linear Layout Profil -->
            <LinearLayout
                    android:id="@+id/ProfilLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="left">

                <!-- Start Button Profil -->
                <Button
                        android:id="@+id/button_profil"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_profil"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"/>
                <!-- End Button Profil -->

                <!-- Start Text Profil -->
                <TextView
                        android:id="@+id/text_button_profil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#D046F2"
                        android:text="@string/button_profil"
                        android:layout_marginLeft="5dp"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_gravity="center_vertical"/>
                <!-- End Text Profil -->

            </LinearLayout>
            <!-- End Linear Layout Profil -->

            <!-- Start Linear Layout Content -->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="50dp">

                <!-- Start Linear Layout Content -->
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp">

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                    <!-- End Blank Space -->

                    <!-- Start Image View Button Tambah -->
                    <ImageView
                            android:id="@+id/button_tambah"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/tombol_tambah"
                            android:contentDescription="@string/app_name"/>
                    <!-- End Image View Button Tambah -->

                    <!-- Start Blank Space -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                    <!-- End Blank Space -->

                </LinearLayout>
                <!-- End Linear Layout Content -->

                <!-- Start Horizontal Scroll View -->
                <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:padding="20dp"
                        android:scrollbars="none">

                    <!-- Start Table Layout -->
                    <TableLayout
                            android:id="@+id/dokumentasi_gizi"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:stretchColumns="*"
                            android:background="@drawable/border_table">

                        <!-- Start Hidden Row for Horizontal Scroll View -->
                        <TableRow>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:padding="5dp"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/gerakan_halus"
                                    android:visibility="invisible"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:padding="5dp"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/gerakan_halus"
                                    android:visibility="invisible"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:padding="5dp"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/gerakan_halus"
                                    android:visibility="invisible"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:padding="5dp"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/gerakan_halus"
                                    android:visibility="invisible"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:padding="5dp"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/gerakan_halus"
                                    android:visibility="invisible"/>
                        </TableRow>

                        <TableRow>

                            <!-- Start Text View Tanggal -->
                            <TextView
                                    android:id="@+id/text_dokumentasigizi_tanggal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginLeft="3dp"
                                    android:gravity="center_vertical"
                                    android:textColor="#FF0000"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:background="@drawable/border_row"
                                    android:text="@string/dokumentasigizi_tanggal_tabel"/>
                            <!-- End Text View Tanggal -->

                            <!-- Start Text View Usia -->
                            <TextView
                                    android:id="@+id/text_dokumentasigizi_usia"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="1dp"
                                    android:padding="5dp"
                                    android:textColor="#FF0000"
                                    android:background="@drawable/border_row"
                                    android:gravity="center_vertical"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/dokumentasigizi_usia_tabel"/>
                            <!-- End Text View Usia -->

                            <!-- Start Text View Tinggi Badan-->
                            <TextView
                                    android:id="@+id/text_dokumentasigizi_tinggibadan"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="1dp"
                                    android:padding="5dp"
                                    android:textColor="#FF0000"
                                    android:background="@drawable/border_row"
                                    android:gravity="center_vertical"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/dokumentasigizi_tinggibadan_tabel"/>
                            <!-- End Text View Tinggi Badan -->

                            <!-- Start Text View Berat Badan -->
                            <TextView
                                    android:id="@+id/text_dokumentasigizi_beratbadan"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_margin="1dp"
                                    android:padding="5dp"
                                    android:textColor="#FF0000"
                                    android:background="@drawable/border_row"
                                    android:gravity="center_vertical"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/dokumentasigizi_beratbadan_tabel"/>
                            <!-- End Text View Berat Badan -->

                            <!-- Start Text View Detail-->
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/border_row"
                                    android:padding="5dp"
                                    android:textColor="#D046F2"
                                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                                    android:text="@string/blank"
                                    android:id="@+id/text_dokumentasigizi_detail"
                                    android:visibility="gone"/>
                            <!-- Start Text View Detail-->
                        </TableRow>
                    </TableLayout>
                    <!-- End Table Layout-->

                </HorizontalScrollView>
                <!-- End Horizontal Scroll View -->

                <!-- Start Blank Space -->
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight=".2"
                        />
                <!-- End Blank Space -->

            </LinearLayout>
            <!-- End Linear Layout Content -->

        </LinearLayout>

        <!-- Start Relative Layout Footer -->
        <RelativeLayout
                android:id="@+id/footerRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF1B5"
                android:layout_alignParentBottom="true">

            <!-- Start Text Footer -->
            <TextView
                    android:id="@+id/text_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#D046F2"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/text_footer"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"/>
            <!-- End Text Footer -->

        </RelativeLayout>
        <!-- End Relative Layout Footer -->

    </RelativeLayout>

</ScrollView>