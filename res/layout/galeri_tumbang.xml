<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:id="@+id/scrollView">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFBC9"
                android:orientation="vertical">

            <!-- Start Linear Layout Header -->
            <LinearLayout
                    android:id="@+id/HeaderLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF1B5">

                <!-- Start Blank Space -->
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight=".2"/>
                <!-- End Blank Space -->

                <!-- Start Header Logo Image -->
                <ImageView
                        android:id="@+id/logo_index"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_logopanjang"
                        android:contentDescription="@string/app_name"/>
                <!-- End Header Logo Image -->

                <!-- Start Blank Space -->
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight=".2"/>
                <!-- End Blank Space -->

            </LinearLayout>
            <!-- End Linear Layout Header -->

            <TextView
                    android:id="@+id/button_galeritumbang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D046F2"
                    android:text="@string/button_galeritumbang"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"/>

            <!-- Start Linear Layout Profil -->
            <LinearLayout
                    android:id="@+id/ProfilLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/button_rounded" android:gravity="left">

                <!-- Start Button Profil -->
                <Button
                        android:id="@+id/button_profil"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_profil"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"/>
                <!-- End Button Profil -->

                <!-- Start Text Profil -->
                <TextView
                        android:id="@+id/text_button_profil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#D046F2"
                        android:text="@string/button_profil"
                        android:layout_marginLeft="5dp"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_gravity="center_vertical"/>
                <!-- End Text Profil -->

            </LinearLayout>
            <!-- End Linear Layout Profil -->

            <!-- Start Linear Layout Content -->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="50dp" android:layout_marginTop="10dp">

                <!-- Start Linear Layout Tanggal -->
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">

                    <!-- Start Text View Tanggal  -->
                    <TextView
                            android:id="@+id/text_galeri_tanggal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#D046F2"
                            android:text="@string/galeri_tanggal"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                    <!-- End Text View Tanggal  -->

                    <!-- Start Text View Titik Dua -->
                    <TextView
                            android:id="@+id/titikdua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#D046F2"
                            android:text="@string/titikdua"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_marginLeft="5dp"/>
                    <!-- End Text View Titik Dua -->

                    <EditText
                            android:id="@+id/galeri_tanggal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0000"
                            android:hint="@string/hint_galeri_tanggal"
                            android:focusable="false"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"/>

                </LinearLayout>
                <!-- End Linear Layout Tanggal -->

                <!-- Start Linear Layout Tanggal -->
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">

                    <!-- Start Text View Tanggal Lahir -->
                    <TextView
                            android:id="@+id/text_galeri_usia"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#D046F2"
                            android:text="@string/galeri_usia"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
                    <!-- End Text View Tanggal Lahir -->

                    <!-- Start Text View Titik Dua -->
                    <TextView
                            android:id="@+id/titikdua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#D046F2"
                            android:text="@string/titikdua"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_marginLeft="5dp"/>
                    <!-- End Text View Titik Dua -->

                    <TextView
                            android:id="@+id/galeri_usia"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0000"
                            android:hint="@string/dash"
                            android:focusable="false"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_marginLeft="5dp"/>

                </LinearLayout>
                <!-- End Linear Layout Usia -->

                <com.syafira.SIGITA.ExpandableHeightGridView
                        android:id="@+id/gridview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:numColumns="auto_fit"
                        android:verticalSpacing="10dp"
                        android:horizontalSpacing="10dp"
                        android:stretchMode="columnWidth"
                        android:focusable="false"
                        android:visibility="gone"/>


                <!-- Start Blank Space -->
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight=".2"
                        android:layout_marginBottom="30dp"/>
                <!-- End Blank Space -->

            </LinearLayout>
            <!-- End Linear Layout Content -->

        </LinearLayout>

        <!-- Start Relative Layout Footer -->
        <RelativeLayout
                android:id="@+id/footerRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF1B5"
                android:layout_alignParentBottom="true">

            <!-- Start Text Footer -->
            <TextView
                    android:id="@+id/text_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#D046F2"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/text_footer"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"/>
            <!-- End Text Footer -->

        </RelativeLayout>
        <!-- End Relative Layout Footer -->

    </RelativeLayout>

</ScrollView>