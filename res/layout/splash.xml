<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DAFFD9"
                android:gravity="center"
                android:orientation="vertical">

        <!-- Start Splash Logo Image -->
        <ImageView
                android:id="@+id/splashscreen"
                android:src="@drawable/icon_logo"
                android:contentDescription="@string/app_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_margin="20dp"/>
        <!-- End Splash Logo Image -->

        <!-- Start Splash Text Image -->
        <ImageView
                android:src="@drawable/tulisan_logo"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>
        <!-- End Splash Text Image -->

</LinearLayout>